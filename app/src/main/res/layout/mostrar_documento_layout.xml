<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewCloseDialog"
            android:layout_width="@dimen/mostrar_documento_icono_cerrar_size"
            android:layout_height="@dimen/mostrar_documento_icono_cerrar_size"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_close_dialog"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewNombreDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/azul"
        android:textSize="@dimen/sinc_dialog_text_title_size"
        android:layout_marginTop="@dimen/mostrar_documento_margin_top_size"/>

    <ImageView
        android:id="@+id/imageViewDocumento"
        android:layout_width="@dimen/mostrar_documento_width"
        android:layout_height="@dimen/mostrar_documento_height"
        android:layout_marginTop="@dimen/mostrar_documento_margin_top_size"
        android:layout_gravity="center_horizontal"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mostrar_documento_margen_horizontal_botones"
        android:layout_marginBottom="@dimen/mostrar_documento_margen_horizontal_botones">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/buttonCumple"
                android:layout_width="@dimen/sinc_dialog_icono_size"
                android:layout_height="@dimen/sinc_dialog_icono_size"
                android:background="@mipmap/ic_cumple_gris"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/buttonNoCumple"
                android:layout_width="@dimen/sinc_dialog_icono_size"
                android:layout_height="@dimen/sinc_dialog_icono_size"
                android:background="@mipmap/ic_nocumple_gris"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/buttonBorrar"
                android:layout_width="@dimen/sinc_dialog_icono_size"
                android:layout_height="@dimen/sinc_dialog_icono_size"
                android:background="@mipmap/ic_borrar"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/buttonHistorico"
                android:layout_width="@dimen/sinc_dialog_icono_size"
                android:layout_height="@dimen/sinc_dialog_icono_size"
                android:background="@drawable/historial_icono" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>