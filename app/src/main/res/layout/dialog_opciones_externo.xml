<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/gris">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dialog_usuario_externo_margin_bottom_title">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dialog_usuario_externo_icon_title_size"
                    android:layout_height="@dimen/dialog_usuario_externo_icon_title_size"
                    android:layout_marginEnd="@dimen/dialog_usuario_externo_separacion_button"
                    android:src="@drawable/ic_login"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul"
                    android:textStyle="bold"
                    android:textSize="@dimen/dialog_usuario_externo_text_title_size"
                    android:layout_gravity="center_vertical"
                    android:text="@string/usuario_externo_tag"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_button">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="@dimen/dialog_usuario_externo_icon_button_size"
                    android:layout_height="@dimen/dialog_usuario_externo_icon_button_size"
                    android:src="@drawable/man_user"
                    android:layout_marginTop="@dimen/dialog_usuario_externo_margin_top_image_button"
                    android:layout_marginBottom="@dimen/dialog_usuario_externo_margin_top_image_button"
                    android:layout_marginEnd="@dimen/dialog_usuario_externo_separacion_button"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/buttonRegistrarse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/dialog_usuario_externo_text_button_size"
                    android:background="@color/transparente"
                    android:text="@string/registrarse" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_usuario_externo_margin_top__button"
            android:background="@drawable/drawable_button_azul">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="@dimen/dialog_usuario_externo_icon_button_size"
                    android:layout_height="@dimen/dialog_usuario_externo_icon_button_size"
                    android:src="@drawable/locked_padlock"
                    android:layout_marginTop="@dimen/dialog_usuario_externo_margin_top_image_button"
                    android:layout_marginBottom="@dimen/dialog_usuario_externo_margin_top_image_button"
                    android:layout_marginEnd="@dimen/dialog_usuario_externo_separacion_button"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/buttonRestablecerContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:background="@color/transparente"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/dialog_usuario_externo_text_button_size"
                    android:layout_marginStart="5dp"
                    android:text="@string/restablecerContrasena" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>