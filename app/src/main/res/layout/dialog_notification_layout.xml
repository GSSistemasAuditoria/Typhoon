<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparente02">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dialog_notificacion_margin_vertical"
        android:layout_marginEnd="@dimen/dialog_notificacion_margin_vertical"
        android:background="@color/gris">

    <TextView
        android:id="@+id/textViewDialogTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/azul"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_rechazo_text_titulo_size"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDialogMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textColor="@color/azul"
                android:textStyle="bold"
                android:textSize="@dimen/sinc_dialog_text_title_size"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_notificacion_button_margin_top"
        android:layout_marginBottom="@dimen/dialog_notificacion_button_margin_bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayoutCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_button_azul"
                android:layout_marginEnd="@dimen/sinc_dialog_separacion_hor_button">

                <TextView
                    android:id="@+id/buttonCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancelar_tag"
                    android:textSize="@dimen/sinc_dialog_text_button_size"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/sinc_dialog_margin_ver_button"
                    android:layout_marginStart="@dimen/sinc_dialog_margin_ver_button"
                    android:layout_marginTop="@dimen/sinc_dialog_margin_hor_button"
                    android:layout_marginBottom="@dimen/sinc_dialog_margin_hor_button"
                    android:textColor="@color/blanco"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_button">

                <TextView
                    android:id="@+id/buttonAceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ok_tag"
                    android:textSize="@dimen/sinc_dialog_text_button_size"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/sinc_dialog_margin_ver_button"
                    android:layout_marginStart="@dimen/sinc_dialog_margin_ver_button"
                    android:layout_marginTop="@dimen/sinc_dialog_margin_hor_button"
                    android:layout_marginBottom="@dimen/sinc_dialog_margin_hor_button"
                    android:textColor="@color/blanco"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>