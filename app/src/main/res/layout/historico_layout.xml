<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/historial_icono"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/historico_tag"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/azul"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewEstatusEvidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estatus_general_tag"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:textColor="@color/azul"/>

    <TextView
        android:id="@+id/textViewEtapaEvidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/etapa_tag"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/azul"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/historial_de_validaciones_y_rechazos_tag"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/azul"/>

    <ListView
        android:id="@+id/listViewHistorico"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:descendantFocusability="afterDescendants"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonCerrar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:background="@drawable/drawable_button"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="@string/cerrar_tag"/>

</LinearLayout>