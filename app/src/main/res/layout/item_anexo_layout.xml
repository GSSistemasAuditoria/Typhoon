<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewEtapa"
            android:layout_width="@dimen/checklist_check_icon_size"
            android:layout_height="@dimen/checklist_check_icon_size"
            android:src="@mipmap/ic_documento_pendiente"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/textViewTituloAnexo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/checklist_text_encabezado_size"
            android:text="TÃ­tulo del anexo"/>

        <ImageView
            android:id="@+id/imageViewSubirArchivo"
            android:layout_width="@dimen/checklist_check_icon_size"
            android:layout_height="@dimen/checklist_check_icon_size"
            android:src="@mipmap/ic_subir_gris"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:id="@+id/imageViewDescargarArchivo"
            android:layout_width="@dimen/checklist_check_icon_size"
            android:layout_height="@dimen/checklist_check_icon_size"
            android:src="@mipmap/ic_descargar_gris"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:id="@+id/imageViewSelect"
            android:layout_width="@dimen/checklist_check_icon_size"
            android:layout_height="@dimen/checklist_check_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_uncheck_blue"/>

    </LinearLayout>

</LinearLayout>