<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <LinearLayout
        android:id="@+id/linearLayoutCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/drawable_button"
        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="@dimen/checklist_popup_icons_size"
            android:layout_height="@dimen/checklist_popup_icons_size"
            android:background="@drawable/ic_action_camera"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/drawable_button_azul"
        android:layout_toEndOf="@+id/linearLayoutCamera">

        <Button
            android:id="@+id/buttonFiles"
            android:layout_width="@dimen/checklist_popup_icons_size"
            android:layout_height="@dimen/checklist_popup_icons_size"
            android:background="@drawable/ic_action_picture"/>

    </LinearLayout>

</RelativeLayout>