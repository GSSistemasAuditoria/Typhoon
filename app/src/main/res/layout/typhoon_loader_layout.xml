<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutLoader"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/transparente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewLoader"
            android:layout_width="@dimen/loader_typhoon_logo_size"
            android:layout_height="@dimen/loader_typhoon_logo_size"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textViewLoader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/loader_typhoon_logo_text_size"
            android:textColor="@color/blanco"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Texto"/>

    </LinearLayout>

</RelativeLayout>